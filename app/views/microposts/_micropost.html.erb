<li class="my-5">
  <div class="row no-gutters">
    <div class="col-md-4 card">
      <% if micropost.photo.present? %>
        <%= image_tag micropost.photo.thumb.url, style: "height: 200px"  %>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="row mt-5">
        <div class="col-md-4 text-center">
          <h5>コメント</h5>
        </div>
        <div class="col-md-8">
          <h5><%= micropost.content %></h5>
          <p>最終更新:<%= time_ago_in_words(micropost.created_at) %>前</p>
          <% if current_user?(micropost.user) %>
          <p><%= link_to "削除", micropost, method: :delete, data: { confirm: "本当に削除してよろしいですか？" }, class: 'btn btn-danger' %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</li>
