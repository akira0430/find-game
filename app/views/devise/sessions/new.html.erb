<section class="form-auth text-center">
<%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
  <h3 class="mb-5 font-weight-normal">ログインページ</h3>

  <div class="form-group">
    <label for="inputEmail" class="sr-only">Email address</label>
      <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "メールアドレス", autocomplete: "email" %>
  </div>

  <div class="form-group">
    <label for="inputPassword" class="sr-only">Password</label>
    <%= f.password_field :password, autocomplete: "current_password", placeholder: "パスワード", class: "form-control", id: "inputPassword" %>
  </div>

  <button class="btn btn-primary btn-block" type="submit">ログイン</button>
  <%= link_to "facebookでログイン", user_facebook_omniauth_authorize_path, class: "btn btn-primary btn-block" %>
<% end %>

</section>
