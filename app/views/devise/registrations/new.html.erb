<section class="form-auth text-center">
<%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
  <h3 class="mb-3 font-weight-normal">新規登録画面</h3>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "姓" %>
    </div>

    <div class="form-group">
      <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "名前" %>
    </div>

    <div class="form-group">
      <%= f.text_field :user_name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード確認" %>
    </div>

    <button class="btn btn-block btn-primary type="submit">新規登録</button>
    <%= link_to "facebookでログイン", user_facebook_omniauth_authorize_path, class: "btn btn-primary btn-block" %>
<% end %>

</section>
