<div class="container">
  <h3 class="text-center mt-5">Find-Game</h3>
  <h1 class="text-center">Welcome to the site</h1>
</div>

  <div class="for_slick_slider multiple-items">
    <div class="items">
      <%= image_tag asset_path("game1.jpg") %>
      <div class="overlay"></div>
    </div>
    <div class="items">
      <%= image_tag asset_path("game2.jpg") %>
      <div class="overlay"></div>
    </div>
    <div class="items">
      <%= image_tag asset_path("game3.jpg") %>
      <div class="overlay"></div>
    </div>
    <div class="items">
      <%= image_tag asset_path("game4.jpg") %>
      <div class="overlay"></div>
    </div>
    <div class="items">
      <%= image_tag asset_path("game5.jpg") %>
      <div class="overlay"></div>
    </div>
  </div>


  <div class="container main-body">
      <div class="row mt-5">
        <% @topics.each do |topic| %>
        <div class="col-lg-4 col-sm-6 mb-4">
          <div class="card" style="width: 252px;">
          <% if topic.photo.present? %>
            <%= link_to topic_path(topic) do %>
            <%= image_tag topic.photo.thumb.url, style: "width: 250px; height: 200px;" %>
            <% end %>
          <% end %>
            <div class="card-body">
              <h4 class="card-title h5"><%= link_to topic.title, topic_path(topic), class: "text-info" %></h4>
              <div class="card-text">
                <span class="mr-2"><i class="fa fa-gamepad"><%= topic.title %></i></span>
                <span class="mr-2"><i class="fa fa-adjust ml-1"><%= topic.item_counts %></i></span>
                <p class="pt-2"><%= topic.address %></p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
