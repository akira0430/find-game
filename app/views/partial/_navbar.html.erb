<header>
  <nav class="navbar navbar-expand-md navbar-light bg-light">
    <h5 class="my-0 mr-md-auto font-weight-normal">
      <%= link_to "Find Game", root_path, class: "text-dark" %>
    </h5>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
        <li class="nav-item ml-5">
          <%= link_to root_path, class: "nav-link" do %>
            <i class="fa fa-home"></i>
            ホーム
          <% end %>
        </li>
        <li class="nav-item ml-5">
          <%= link_to users_path, class: "nav-link" do %>
            <i class="fa fa-user"></i>
            ユーザー情報
          <% end %>
        </li>
        <% end %>
        <li class="nav-item ml-5">
          <%= link_to help_path, class: "nav-link" do %>
            <i class="fa fa-info"></i>
            利用規約
          <% end %>
        </li>
        <% if user_signed_in? %>
        <li class="nav-item ml-5">
          <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
            <i data-feather="log-out"></i>
            ログアウト
          <% end %>
        </li>
        <li class="nav-item ml-5">
          <%= link_to user_registration_path, method: :delete, data: { confirm: "本当に削除してよろしいですか？" }, class: "nav-link" do %>
            <i class="fa fa-sign-out-alt"></i>
            ユーザー退会
          <% end %>
        </li>
        <% else %>
        <li class="nav-item ml-3">
          <%= link_to new_user_registration_path, class: "nav-link" do %>
            <i data-feather="at-sign"></i>
            新規登録
          <% end %>
        </li>
        <li class="nav-item ml-3">
          <%= link_to new_user_session_path, class: "nav-link" do %>
            <i data-feather="log-in"></i>
            ログイン
          <% end %>
        </li>
        <li class="nav-item ml-3">
          <%= link_to user_facebook_omniauth_authorize_path, class: "nav-link" do %>
            <i data-feather="facebook"></i>
            facebookでログイン
          <% end %>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
